@model DatabaseSite.Models.Login
<div class="form-horizontal">
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(s => s.UserName, new { autocomplete = "off", id = "LoginUser", htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @Html.TextBoxFor(s => s.Password, new { autocomplete = "off", id = "LoginPassword", htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <button class="btn btn-default" id="LoginButton">Submit</button>
    </div>
</div>