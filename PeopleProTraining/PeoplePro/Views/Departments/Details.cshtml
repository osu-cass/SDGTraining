@model PeoplePro.Models.Department

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Building)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Building.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employees)
        </dt>
        <dd class="col-sm-10">
            Employees who belong to this department
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Employees[0].Age)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelEmployee => employee.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelEmployee => employee.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelEmployee => employee.Age)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
