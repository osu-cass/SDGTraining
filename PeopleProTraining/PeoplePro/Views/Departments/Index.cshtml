@model IEnumerable<PeoplePro.Models.Department>
@{
    ViewData["Title"] = "Index";
}
<div id="departmentModalPlaceholder"></div>
<h1>Index</h1>
@*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <partial name="_Row" model="item" />
        }
    </tbody>
</table>
<button class="btn btn-primary btn-block" type="button" data-toggle="add-modal" data-target="#departmentModal" data-url="@Url.Action("Add")">
    Add Department
</button>