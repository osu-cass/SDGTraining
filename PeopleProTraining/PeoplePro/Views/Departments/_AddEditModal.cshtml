@model PeoplePro.Models.Department

<div id="departmentModal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="departmentModalTitle" class="modal-title">Add Department</h3>
                <button class="close" type="button" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form asp-action="Add" class="modal-body">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" autofocus />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Building"></label>
                    <select asp-for="BuildingId" asp-items="ViewBag.Buildings" class="form-control"></select>
                    <span asp-validation-for="BuildingId" class="text-danger"></span>
                </div>
            </form>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Close</button>
                <button class="btn btn-primary" type="button" data-save="add-modal">Save</button>
            </div>
        </div>
    </div>
</div>