@model IEnumerable<PeoplePro2.Models.Building>

@{
    ViewData["Title"] = "Buildings";
}

<h2>Building Directory</h2>

<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departments)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @foreach (var department in item.Departments)
                    {
                        @department.Name
                        <div> </div>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.BuildingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BuildingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BuildingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#add-building" data-url="@Url.Action("AddBuilding")">
    Add Building (AJAX)
</button>
